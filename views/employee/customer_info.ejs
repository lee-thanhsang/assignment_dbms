    <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <!-- /.card-header -->
                <div class="card-body"  style="background-color: rgb(214, 212, 212);">
                  <table id="example2" class="table table-bordered table-hover">
                    <thead>
                    <tr>
                      <th>CID</th>
                      <th>SSN</th>
                      <th>Họ</th>
                      <th>Tên</th>
                      <th>Giới tính</th>
                      <th>Sinh nhật</th>
                      <th>Điện thoại</th>
                      <th>Email</th>
                      <th>Điểm</th>
                      <th>Số nhà</th>
                      <th>Phường</th>
                      <th>Quận</th>
                      <th>Thành phố</th>
                    </tr>
                    </thead>
                    <tbody>
                        <%customerList.forEach(function(customer){%>
                          <tr>
                              <td><%=customer.CID%></td>
                              <td><%=customer.SSN%></td>
                              <td><%=customer.LastName%></td>
                              <td><%=customer.FirstName%></td>
                              <td><%=customer.Gender%></td>
                              <td><%=customer.BirthDay.toDateString()%></td>
                              <td><%=customer.PhoneNumber%></td>
                              <td><%=customer.Email%></td>
                              <td><%=customer.AccumulatedPoints%></td>                           
                              <td><%=customer.NumberStreet%></td>
                              <td><%=customer.Wards%></td>
                              <td><%=customer.District%></td>
                              <td><%=customer.City%></td>
                            </tr>
                          <%})%>                  
                    </tbody>
                  </table>
                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
  
            </div>
