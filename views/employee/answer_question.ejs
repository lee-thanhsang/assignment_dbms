    <!-- ======= Blog Section ======= -->
    <section id="faq" class="faq section-bg">
      <div class="container" data-aos="fade-up">
        
        <div class="section-title">
          <h2>Câu hỏi cần trả lời</h2>
        </div>
        <div class="faq-list">
          <ul>
            <%var i = 0;%>
            <%ques_ans.forEach(function(QandA){%>
              <%i = i + 1;%>
            <li data-aos="fade-up" data-aos-delay="100">
              <i class="bx bx-help-circle icon-help"></i> <a data-bs-toggle="collapse" class="collapsed" data-bs-target=<%="#faq-list-" + i.toString()%>> <%=QandA.TimeQues.toISOString().slice(0, 10) +" / "+QandA.CID +" - "+ QandA.LastName +" "+ QandA.FirstName%> <i class="bx bx-chevron-down icon-show"></i><i class="bx bx-chevron-up icon-close"></i></a>
              <a data-bs-toggle="collapse" data-bs-target=<%="#faq-list-" + i.toString()%>> <%=QandA.Question%></a>
              <div id=<%="faq-list-" + i.toString()%> class="collapse" data-bs-parent=".faq-list">
                <button style="margin-left: 46%; margin-top: 5%;" type="button" class="btn btn-primary add-anwser-button" data-toggle="modal" data-target="#add-anwser" data-cid="<%=QandA.CID%>" data-question="<%=QandA.Question%>" >Trả lời</button>
              </div>
            </li>
            <%})%>
          </ul>
        </div>

      </div>
    </section><!-- End Blog Section -->

    <section>
      <!-- Large modal -->
      <div class="modal fade" id="add-anwser" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header" style="background-color: #0d6eff;">
              <h5 class="modal-title" id="exampleModalLabel" >Trả lời câu hỏi</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form action="add-answer" method="post">
                <div class="form-group">
                  
                  <div class="row">
                    <div class="col-md-12">
                      <input type="text" class="form-control" placeholder="Nhập câu trả lời" name="Answer" required>
                      <input type="text" class="form-control" name="CID" hidden=true>
                      <input type="text" class="form-control" name="Question" hidden=true>
                    </div>
                    
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-8"></div>
                  <div class="col-lg-4">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Xác nhận</button>
                  </div>
                  
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
